<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp">

    <include
        android:id="@+id/ipc_bottombar"
        layout="@layout/ipcdemo_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/ipc_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ipc_bottombar">

        <fragment
            android:id="@+id/ipc_fragment_layout"
            android:name="vaycent.vaycentproject.DemoPackage.IPC_Package.IPC_CommonFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>





</RelativeLayout>
