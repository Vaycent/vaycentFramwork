<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <include
        android:id="@+id/event_bottombar"
        layout="@layout/eventdemo_bottombar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/event_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/event_bottombar">

        <fragment
        android:name="vaycent.vaycentproject.DemoPackage.EventPackage.TestEventFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </FrameLayout>

</RelativeLayout>