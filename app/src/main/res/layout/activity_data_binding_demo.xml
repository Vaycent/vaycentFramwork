<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="user" type="vaycent.vaycentproject.DemoPackage.DataBindingPackage.User"/>
        <variable name="handler" type="vaycent.vaycentproject.DemoPackage.DataBindingPackage.EventHandler"/>
        <import type="android.view.View"/>
        <!--类名发生冲突时，用alias可以防止冲突-->
        <!--<import type="com.connorlin.databinding.ui.View" alias="AliasView"/>-->

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@{user.firstName}"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@{user.lastName}"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binding Button1"
            android:onClick="@{handler.onClickFriend}"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binding Button2"
            android:onClick="@{handler::onClickFriend2}"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hidden Button"
            android:visibility="@{user.firstName!=null ? View.VISIBLE : View.GONE}"/>

    </LinearLayout>

</layout>
